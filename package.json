{
  "name": "vscode-gem-lens",
  "displayName": "Gem Lens",
  "icon": "images/logo.png",
  "description": "Shows the latest version of a gem in Gemfile and gemspec",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninoseki/vscode-gem-lens.git"
  },
  "author": "Manabu Niseki",
  "publisher": "ninoseki",
  "license": "MIT",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.37.0"
  },
  "keywords": [
    "gem"
  ],
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*.gemspec",
    "workspaceContains:Gemfile"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "jest",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint src --ext .ts",
    "fmt": "prettier --write src/*.ts src/**/*.ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.2.1",
    "@types/moxios": "^0.4.9",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "coveralls": "^3.0.11",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "glob": "^7.1.6",
    "jest": "^25.2.7",
    "moxios": "^0.4.0",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "axios": "^0.19.2"
  }
}
