{
  "name": "vscode-gem-lens",
  "displayName": "Gem Lens",
  "icon": "images/logo.png",
  "description": "Shows the latest version of a gem in Gemfile and gemspec",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninoseki/vscode-gem-lens.git"
  },
  "author": "Manabu Niseki",
  "publisher": "ninoseki",
  "license": "MIT",
  "version": "0.4.3",
  "engines": {
    "vscode": "^1.77.0"
  },
  "keywords": [
    "gem"
  ],
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*.gemspec",
    "workspaceContains:Gemfile.lock",
    "workspaceContains:Gemfile"
  ],
  "contributes": {
    "commands": [
      {
        "title": "Enable Gem Lens CodeLens",
        "command": "vscode-gem-lens.enableCodeLens"
      },
      {
        "title": "Disable Gem Lens Codelens",
        "command": "vscode-gem-lens.disableCodeLens"
      }
    ],
    "configuration": {
      "properties": {
        "vscode-gem-lens.enableCodeLens": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "build": "tsup",
    "lint": "eslint src --ext ts",
    "dev": "npm run build --watch",
    "test": "jest",
    "coverage": "jest --coverage && cat ./coverage/lcov.info",
    "vscode:prepublish": "npm run build",
    "publish": "vsce publish",
    "pack": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "8.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "18.17.14",
    "@types/vscode": "1.77.0",
    "@typescript-eslint/eslint-plugin": "5.58.0",
    "@typescript-eslint/parser": "5.58.0",
    "coveralls": "3.1.1",
    "eslint": "8.38.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "glob": "10.1.0",
    "jest": "29.5.0",
    "prettier": "2.8.7",
    "ts-jest": "29.1.0",
    "tslint": "6.1.3",
    "tsup": "^6.7.0",
    "typescript": "5.0.4",
    "vscode-test": "1.6.1"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "axios-cache-interceptor": "^1.0.1",
    "semver": "^7.4.0"
  }
}
