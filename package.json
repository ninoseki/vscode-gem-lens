{
  "name": "vscode-gem-lens",
  "displayName": "Gem Lens",
  "icon": "images/logo.png",
  "description": "Shows the latest version of a gem in Gemfile and gemspec",
  "repository": {
    "type": "git",
    "url": "https://github.com/ninoseki/vscode-gem-lens.git"
  },
  "author": "Manabu Niseki",
  "publisher": "ninoseki",
  "license": "MIT",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.54.0"
  },
  "keywords": [
    "gem"
  ],
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*.gemspec",
    "workspaceContains:Gemfile"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "jest",
    "coverage": "jest --coverage && cat ./coverage/lcov.info",
    "lint": "eslint src --ext .ts",
    "fmt": "prettier --write src/*.ts src/**/*.ts"
  },
  "devDependencies": {
    "@types/glob": "7.1.3",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.34",
    "@types/vscode": "1.54.0",
    "@typescript-eslint/eslint-plugin": "4.17.0",
    "@typescript-eslint/parser": "4.17.0",
    "coveralls": "3.1.0",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-jest": "24.3.1",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "glob": "7.1.6",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "26.5.3",
    "tslint": "6.1.3",
    "typescript": "4.2.3",
    "vscode-test": "1.5.1"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "axios-cache-adapter": "^2.7.3"
  }
}
